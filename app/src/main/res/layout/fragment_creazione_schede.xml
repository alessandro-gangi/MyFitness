<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".view.fragments.CreazioneSchedeFragment"
             android:id="@+id/fragment_creazione_schede">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creazione_schede_recycler_view"
                app:layout_constraintTop_toTopOf="parent">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button_add_esercizio"
                android:background="@drawable/ic_baseline_add_24px"
                app:layout_constraintTop_toBottomOf="@id/creazione_schede_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>