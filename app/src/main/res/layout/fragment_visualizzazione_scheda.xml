<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.fragments.VisualizzazioneSchedaFragment"
             android:id="@+id/fragment_visualizzazione_scheda">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@android:color/holo_red_light"
                    android:id="@+id/scheda_imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="8dp"
            />

            <TextView
                    android:text="Data:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data_intestazione_textView"
                    app:layout_constraintStart_toEndOf="@+id/scheda_imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="8dp"/>
            <TextView
                    android:text="la data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data_textView"
                    app:layout_constraintStart_toEndOf="@id/data_intestazione_textView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="8dp"/>


            <TextView
                    android:text="Tipologia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipologia_intestazione_textView"
                    app:layout_constraintStart_toEndOf="@id/scheda_imageView"
                    app:layout_constraintTop_toBottomOf="@id/data_intestazione_textView"
                    android:layout_margin="8dp"/>
            <TextView
                    android:text="la tipologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipologia_textView"
                    app:layout_constraintStart_toEndOf="@+id/tipologia_intestazione_textView"
                    app:layout_constraintTop_toBottomOf="@id/data_intestazione_textView"
                    android:layout_margin="8dp"/>

            <TextView
                    android:text="il commento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commento_textView"
                    app:layout_constraintStart_toEndOf="@id/scheda_imageView"
                    app:layout_constraintTop_toBottomOf="@id/tipologia_intestazione_textView"
                    android:layout_margin="8dp"
                    android:scrollbars="vertical"
                    android:maxLines="4"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/visual_scheda_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/visual_scheda_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>