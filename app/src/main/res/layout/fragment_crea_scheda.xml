<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.fragments.CreaSchedaFragment"
             android:id="@+id/fragment_crea_scheda">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/header_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/utente_imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="8dp"
            />

            <TextView
                    android:text="Data:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data_intestazione_textView"
                    app:layout_constraintStart_toEndOf="@+id/utente_imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="8dp"/>
            <TextView
                    android:text="la data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/data_textView"
                    app:layout_constraintStart_toEndOf="@id/data_intestazione_textView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="8dp"/>


            <TextView
                    android:text="Tipologia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipologia_intestazione_textView"
                    app:layout_constraintStart_toEndOf="@id/utente_imageView"
                    app:layout_constraintTop_toBottomOf="@id/data_intestazione_textView"
                    android:layout_margin="8dp"/>
            <TextView
                    android:text="la tipologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tipologia_textView"
                    app:layout_constraintStart_toEndOf="@+id/tipologia_intestazione_textView"
                    app:layout_constraintTop_toBottomOf="@id/data_intestazione_textView"
                    android:layout_margin="8dp"/>

            <TextView
                    android:text="il commento"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/commento_textView"
                    app:layout_constraintStart_toEndOf="@id/utente_imageView"
                    app:layout_constraintTop_toBottomOf="@id/tipologia_intestazione_textView"
                    android:layout_margin="8dp"
                    android:scrollbars="vertical"
                    android:maxLines="4"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="vertical"
                      app:layout_constraintTop_toBottomOf="@id/header_constraint_layout"
                    app:layout_constraintBottom_toTopOf="@id/finisci_scheda_button">

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/crea_scheda_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed">

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/crea_scheda_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button android:id="@+id/finisci_scheda_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:text="Fine"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>